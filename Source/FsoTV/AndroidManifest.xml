<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fsotv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fsotv.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fsotv.VideoDetailActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_video_detail" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.fsotv.BrowseChannelsActivity"
            android:label="@string/title_activity_browse_channels" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.fsotv.BrowseVideosActivity"
            android:label="@string/title_activity_browse_videos" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.fsotv.MyChannelsActivity"
            android:label="@string/title_activity_my_channels" >
        </activity>
        <activity
            android:name="com.fsotv.WatchVideoActivity"
            android:label="@string/title_activity_watch_video" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.fsotv.MyVideosActivity"
            android:label="@string/title_activity_my_videos" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.fsotv.CategoryActivity"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="com.fsotv.VideoCommentsActivity"
            android:label="@string/title_activity_comments" >
        </activity>
        <activity
            android:name="com.fsotv.tablet.HomeTabletActivity"
            android:label="@string/title_activity_home_tablet" >
        </activity>
        <activity
            android:name="com.fsotv.tablet.FavoriteTabletActivity"
            android:label="@string/title_activity_favorite_tablet" >
        </activity>
        <activity
            android:name="com.fsotv.tablet.BrowseTabletActivity"
            android:label="@string/title_activity_browse_tablet" >
        </activity>
        <activity
            android:name="com.fsotv.tablet.VideosTabletActivity"
            android:label="@string/title_activity_videos_tablet" >
        </activity>
        <activity
            android:name="com.fsotv.tablet.CommentsTabletActivity"
            android:label="@string/title_activity_comments_tablet" >
        </activity>
        <activity
            android:name="com.fsotv.VideoDescriptionActivity"
            android:label="@string/title_activity_video_description" >
        </activity>
    </application>

</manifest>