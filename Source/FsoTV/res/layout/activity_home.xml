<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:background="@drawable/fsotv_background"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >
        
        <Button
            android:id="@+id/btn_one"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:background="#FFFFFF" />
        
        <Button
            android:id="@+id/btn_two"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/btn_one"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="#FFFFFF" />
        
        <Button
            android:id="@+id/btn_three"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/btn_two"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="#FFFFFF" />
        
        <Button
            android:id="@+id/btn_four"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/btn_three"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="#FFFFFF" />
        
        <Button
            android:id="@+id/btn_five"
            android:layout_width="30dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/btn_four"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:background="#FFFFFF" />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <ViewFlipper
            android:id="@+id/viewFlip_channel"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            
            <LinearLayout
                android:id="@+id/layout_channel" 
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:background="@drawable/channel_list_background"
   			 	android:orientation="vertical" >
            
               <TextView
                    android:id="@+id/tv_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="25dp"
                    android:text="Music Channel (Button 1 clicked)" />
             
             </LinearLayout>
             
            <LinearLayout 
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:background="@drawable/channel_list_background"
   			 	android:orientation="vertical" >
               
               <TextView
                    android:id="@+id/tv_sport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="25dp"
                    android:text="Sport Channel (Button 2 clicked)" />
               
            </LinearLayout>
                        
            <LinearLayout 
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:background="@drawable/channel_list_background"
   			 	android:orientation="vertical" >
               
               <TextView
                    android:id="@+id/tv_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="25dp"
                    android:text="News Channel (Button 3 clicked)" />
               
            </LinearLayout>
            
            <LinearLayout 
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:background="@drawable/channel_list_background"
   			 	android:orientation="vertical" >
               
               <TextView
                    android:id="@+id/tv_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="25dp"
                    android:text="Game Channel (Button 4 clicked)" />
               
            </LinearLayout>
            
            <LinearLayout 
    			android:layout_width="fill_parent"
    			android:layout_height="fill_parent"
    			android:background="@drawable/channel_list_background"
   			 	android:orientation="vertical" >
               
               <TextView
                    android:id="@+id/tv_film"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="25dp"
                    android:text="Film Channel (Button 5 clicked)" />
               
            </LinearLayout>
                              
        </ViewFlipper>
        
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center" >
        
    </RelativeLayout>
    
</LinearLayout>