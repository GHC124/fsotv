<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fsotv"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.fsotv.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fsotv.VideoDetailActivity"
            android:label="@string/title_activity_video_detail" >
        </activity>
        <activity
            android:name="com.fsotv.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.fsotv.BrowseActivity"
            android:label="@string/title_activity_browse" >
        </activity>
        <activity
            android:name="com.fsotv.SocialActivity"
            android:label="@string/title_activity_social" >
        </activity>
        <activity
            android:name="com.fsotv.RecordActivity"
            android:label="@string/title_activity_record" >
        </activity>
    </application>

</manifest>